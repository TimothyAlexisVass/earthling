      <%= f.text_field  :name, required: true, placeholder: "Your Name", class: "flex-1 margin-5" %>
      <%= f.text_field :email, required: true, placeholder: "your@email", class: "flex-1 margin-5" %>
    </div>
    <div class="flex">
      <%= f.text_area :message, rows: 8, placeholder: "Message", required: true, class: "flex-1 margin-5" %>
